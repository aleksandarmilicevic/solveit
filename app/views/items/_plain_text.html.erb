<%# @param item [Figure] %>
<%# @param readonly [TrueClass, FalseClass] %>

<% readonly rescue readonly = false %>

<% if readonly %>
  <textarea class="plain_text_item_readonly" disabled="disabled">
    <%= item.text %>
  </textarea>
<% else %>
  <%= autosave_fld item, :text,
                   :tag => "textarea",
                   :class => "plain_text_item_edit cancel_draggable",
                   :multiline => true,
                   :escape_body => true %>
<% end %>
