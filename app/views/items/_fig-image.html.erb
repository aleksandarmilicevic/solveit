<%# @param item [Figure] %>

  <img id="figure-<%=item.id%>"
       src="<%= item.image ? "/fetchFigure?id=#{item.id}" : '#'%>" 
       alt="<%= item.image.file.filename rescue 'no image uploaded' %>"
       style="<%= item.image_gui_style %>"
       class="figure">
  </img>

  <% if item.image %>
    <script>
    $("#figure-<%=item.id%>").resizable({aspectRatio: <%= item.image.aspect_ratio  %>});
    </script>
  <% end %>
