    <%= form_for(@project) do |f| %>
      <%= render :partial => "shared/errors", :locals => {:errors => @project.errors} %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.check_box :is_private, class: 'inline va-top' %>
      <%= f.label :is_private, "Private", class: 'inline' %>      
    
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
      
      <%= f.submit "Create Project", class: "btn" %>
    <% end %>